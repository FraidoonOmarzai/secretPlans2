<%- include('partials/header') %>

<div class="box" id="heading">
   <h1 class="ph1">My Secret Plans 👨‍💻️</h1>
</div>

<div class="box">
   <% plans.forEach(plan=>{ %>
   <form action="/delete" method="post">
      <div class="item">
         <!-- using input to submit -->
         <input type="checkbox" name="checkbox" value="<%= plan %>" onChange="this.form.submit()">
         <p class="pp"><%= plan %></p>
      </div>
      <!-- here we use second input with type of hidden for receving the  username -->
      <input type="hidden" name="username" value="<%=username %>">
   </form>
   <% }) %>

   <form class="item" action="/submit" method="post">
      <input type="text" name="newPlan" placeholder="New Secret" autocomplete="off">
      <button class="pb" type="submit">+</button>
   </form>

</div>

<a class="btn btn-light pb" href="/logout" role="button">Log Out</a>


<%- include('partials/footer') %>
